<h1><%= @user.full_name %></h1>

<div>
  <p>
    <%= link_to 'Edit My Account', edit_user_path(@user) %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
  <p>
    <strong>Total amount pledged:</strong>
    $<%= @user.pledges.sum(:amount) %>
  </p>
</div>

<div>
  <h2>Backed projects</h2>
  <ul>
    <% @user.backed_projects.each do |project|  %>
    <li><%= render project %></li>
    <% end %>
  </ul>
</div>

<div>
  <h2>Owned Projects</h2>
  <ul>
    <% @user.owned_projects.each do |project| %>
    <li><%= render project %></li>
    <% end %>
  </ul>
</div>

