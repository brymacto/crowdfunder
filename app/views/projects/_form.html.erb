<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :funding_goal %><br />
    <%= f.number_field :funding_goal %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_field :end_date %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list, value: @project.tag_list.to_s %>
  </div>

  <h4>Add rewards</h4>
  <div id="rewards">
    <%= f.fields_for :rewards do |reward_fields| %>
      <%= render 'reward_fields', f: reward_fields %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add reward', f, :rewards %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
